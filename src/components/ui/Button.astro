---
interface Props {
  variant?: 'primary' | 'secondary' | 'outline';
  size?: 'sm' | 'md' | 'lg';
  href?: string;
}

const { variant = 'primary', size = 'md', href } = Astro.props;
---

{href ? (
  <a 
    href={href}
    class:list={[
      'inline-flex items-center justify-center rounded-lg transition-colors',
      {
        'bg-primary-600 hover:bg-primary-700 text-white': variant === 'primary',
        'border-2 border-primary-600': variant === 'outline',
        'px-4 py-2': size === 'sm',
        'px-6 py-3': size === 'md',
        'px-8 py-4': size === 'lg',
      }
    ]}
  >
    <slot />
  </a>
) : (
  <button
    class:list={[/* mismas clases */]}
  >
    <slot />
  </button>
)}