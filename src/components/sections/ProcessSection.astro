---
import { Icon } from 'astro-icon/components';
// src/components/sections/ProcessSection.astro
const processSteps = [
  {
    title: "Descubrimiento y Estrategia",
    description: "Comprendemos a fondo tus objetivos, audiencia y desafíos para definir una hoja de ruta y estrategia claras.",
    icon: "mdi:clipboard-text-search-outline"
  },
  {
    title: "Diseño UI/UX",
    description: "Creamos prototipos y diseños de interfaz intuitivos y atractivos, centrados en la experiencia del usuario final.",
    icon: "mdi:palette-outline"
  },
  {
    title: "Desarrollo e Iteración",
    description: "Construimos la solución utilizando metodologías ágiles, con ciclos de feedback regulares para asegurar la alineación.",
    icon: "mdi:code-braces"
  },
  {
    title: "Pruebas y Entrega",
    description: "Realizamos pruebas exhaustivas para garantizar la calidad y funcionalidad antes del despliegue final.",
    icon: "mdi:rocket-launch-outline"
  },
  {
    title: "Mantenimiento y Crecimiento",
    description: "Ofrecemos soporte post-lanzamiento, monitorizamos el rendimiento y proponemos mejoras continuas.",
    icon: "mdi:lifebuoy"
  }
];
---

<section class="py-20 bg-gray-50 dark:bg-gray-800/50" id="process">
  <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4">
        The Process
      </h2>
      <p class="text-lg text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
        A transparent and structured approach to ensure project success and deliver maximum value.
      </p>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-5 gap-8"> {/* Adjusted grid columns */}
      {processSteps.map((step, index) => (
        <div class="flex flex-col items-center text-center p-6 bg-white dark:bg-gray-800 rounded-xl shadow-md border border-gray-100 dark:border-gray-700">
          <div class="mb-6 text-blue-600 dark:text-purple-400"> {/* Increased mb slightly */}
            <Icon name={step.icon} class="w-16 h-16 mx-auto" /> {/* Centered icon, increased size */}
          </div>
          <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">{step.title}</h3>
          <p class="text-gray-600 dark:text-gray-400 text-sm">{step.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>
