---
import serviciosData from '../../data/servicios.json';

const categoriasUnicas = [...new Set(serviciosData.servicios.flatMap(s => s.category))];
---

<section class="py-20 bg-white dark:bg-gray-900 relative overflow-hidden" id="services">
    <!-- Fondo con efecto sutil -->
    <div class="absolute inset-0 bg-gradient-to-br from-blue-50/30 to-purple-50/30 dark:from-gray-800 dark:to-gray-900"></div>
    
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative">
        <!-- Encabezado -->
        <div class="text-center mb-16 space-y-6">
            <h2 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white bg-clip-text bg-gradient-to-r from-blue-600 to-purple-600">
                AI & Data Science Solutions
            </h2>
            <p class="text-xl text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
                Transform your business with cutting-edge AI solutions and data-driven insights
            </p>
            
            <!-- Filtros -->
            <div class="flex flex-wrap justify-center gap-2 mt-8" id="filters">
                <button class="filter-btn active" data-filter="all">All Services</button>
                {categoriasUnicas.map(categoria => (
                    <button class="filter-btn" data-filter={categoria}>
                        {categoria.replace(/-/g, ' ').toUpperCase()}
                    </button>
                ))}
            </div>
        </div>

        <!-- Grid de Servicios -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 services-container">
            {serviciosData.servicios.map(servicio => (
                <article class="service-card group" data-category={servicio.category.join(' ')}>
                    <div class="bg-white dark:bg-gray-800 rounded-2xl p-8 h-full transition-all duration-300 hover:-translate-y-2 relative overflow-hidden border border-gray-100 dark:border-gray-700 hover:border-blue-100 hover:dark:border-purple-900/50">
                        <!-- Efecto de gradiente hover -->
                        <div class="absolute inset-0 bg-gradient-to-br from-blue-50/20 to-purple-50/20 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                       

                        <!-- Contenido -->
                        <h3 class="text-2xl font-bold text-center mb-4 text-gray-900 dark:text-white">
                            {servicio.title}
                        </h3>
                        
                        <div class="flex flex-wrap justify-center gap-2 mb-4">
                            {servicio.badges.map(badge => (
                                <span class="badge hover:bg-blue-100 hover:dark:bg-purple-900/20 cursor-pointer">
                                    {badge}
                                </span>
                            ))}
                        </div>
                        
                        <p class="text-gray-600 dark:text-gray-300 text-center mb-6 text-balance">
                            {servicio.description}
                        </p>
                        
                        <ul class="space-y-3 text-gray-600 dark:text-gray-300 mb-6">
                            {servicio.features.map(feature => (
                                <li class="flex items-center hover:pl-3 transition-all duration-300">
                                    <span class="mr-2 text-blue-500 dark:text-purple-400">▸</span>
                                    {feature}
                                </li>
                            ))}
                        </ul>
                    </div>
                </article>
            ))}
        </div>

        <!-- CTA mejorado -->
        <div class="mt-16 text-center space-y-4">
            <p class="text-lg text-gray-600 dark:text-gray-300">
                Ready to transform your business with AI?
            </p>
            <a href="https://wa.me/+5492657626313" 
               class="whatsapp-btn inline-block"
               target="_blank"
               rel="noopener">
               <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 mr-2" viewBox="0 0 24 24" fill="currentColor">
                 <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.11.893a11.821 11.821 0 00-3.48-8.413z"/>
               </svg>
               Start Your AI Journey Now
            </a>
        </div>
    </div>

    <style>
        .filter-btn {
            @apply px-5 py-2.5 rounded-full bg-white dark:bg-gray-800 text-gray-600 dark:text-gray-300 
                   border border-gray-200 dark:border-gray-700 hover:border-blue-500 hover:dark:border-purple-500 
                   transition-all duration-300 text-sm font-medium shadow-sm hover:shadow-md;
        }
        
        .filter-btn.active {
            @apply bg-gradient-to-r from-blue-600 to-purple-600 text-white border-transparent shadow-lg;
        }
        
        .badge {
            @apply px-3 py-1.5 text-sm rounded-full bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 
                   transition-all duration-200 hover:scale-105;
        }
        
        .whatsapp-btn {
            @apply inline-flex items-center px-8 py-4 bg-gradient-to-r from-green-500 to-teal-600 hover:from-green-600 hover:to-teal-700 
                   text-white rounded-2xl transition-all duration-300 shadow-xl hover:shadow-2xl text-lg font-semibold 
                   hover:-translate-y-1 transform;
        }
        
        .service-card {
            @apply transition-all duration-500 hover:z-10;
        }
        
        .service-card.hidden {
            @apply opacity-0 scale-95 absolute pointer-events-none;
        }
    </style>

    <script is:inline>
        // Sistema de Filtrado Mejorado
        document.querySelectorAll('.filter-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                document.querySelectorAll('.filter-btn').forEach(b => b.classList.remove('active'));
                this.classList.add('active');
                
                const filter = this.dataset.filter;
                document.querySelectorAll('.service-card').forEach(card => {
                    const categories = card.dataset.category.split(' ');
                    card.classList.toggle('hidden', filter !== 'all' && !categories.includes(filter));
                });
            });
        });

        // Interactividad para badges
        document.querySelectorAll('.badge').forEach(badge => {
            badge.addEventListener('click', (e) => {
                e.stopPropagation();
                const technology = badge.textContent.trim();
                console.log(`Filter by technology: ${technology}`);
                // Puedes implementar lógica adicional de filtrado aquí
            });
        });
    </script>
</section>